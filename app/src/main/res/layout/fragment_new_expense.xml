<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Space
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal hari ini"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#673AB7"
        android:layout_marginBottom="8dp"/>

    <Spinner
        android:id="@+id/spinnerBudget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:max="100"
        android:progress="50"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/tvRemainingBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sisa budget: Rp 0"
        android:textColor="#673AB7"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/etNominal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan nominal"
        android:inputType="numberDecimal"
        android:textColor="#673AB7"
        android:textColorHint="#9575CD"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/etNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Keterangan"
        android:inputType="textCapSentences"
        android:textColor="#673AB7"
        android:textColorHint="#9575CD"
        android:layout_marginBottom="16dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <Button
        android:id="@+id/btnAddExpense"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tambah Pengeluaran"
        android:textColor="#FFFFFF"
        android:backgroundTint="#673AB7"/>

</LinearLayout>